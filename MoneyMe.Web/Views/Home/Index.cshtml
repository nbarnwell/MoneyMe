@using System.Collections
@using MoneyMe.Web.Areas.Setup.Controllers
@using MoneyMe.Web.Controllers
@using MoneyMe.Web.Models.Scaffolding
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-6">
        <h2>Accounts</h2>
        @foreach (BankAccount account in ViewBag.Accounts)
        {
            <h3>@Html.ActionLink(account.Account.Name, "Details", "BankAccount", new {id = account.Id}, new {})</h3>
        }
    </div>
    <div class="col-md-4">
        <h2>Setup</h2>
        <p>@Html.ActionLink("Families", "Create", "Family", new {Area = "Setup"}, new{})</p>
        <p>@Html.ActionLink("User", "Index", "User", new {Area = "Setup"}, new{})</p>
        <p>@Html.ActionLink("Bank", "Index", "Bank", new {Area = "Setup"}, new{})</p>
        <p>@Html.ActionLink("Account", "Index", "Account", new {Area = "Setup"}, new{})</p>
        <p>@Html.ActionLink("BankAccount", "Index", "BankAccount", new {Area = "Setup"}, new{})</p>
    </div>

</div>