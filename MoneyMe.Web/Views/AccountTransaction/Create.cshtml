@model MoneyMe.Web.Models.AccountTransaction.CreateAccountTransactionViewModel

@{
  ViewBag.Title = "Record Transaction";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm("AccountTransaction", "Create", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Transaction Details</h4>
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.TransactionDate)
                @Html.TextBoxFor(m => m.TransactionDate, new { @class = "form-control"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ReceiptDate)
                @Html.TextBoxFor(m => m.ReceiptDate, new { @class = "form-control"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Amount)
                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Payee)
                @Html.TextBoxFor(m => m.Payee, new { @class = "form-control"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PaymentMethodId)
                @Html.DropDownListFor(m => m.PaymentMethodId, new SelectList(ViewBag.PaymentMethods, "Id", "Name"), new { @class = "form-control" })
            </div>
        }
    </div>
</div>