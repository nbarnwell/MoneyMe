@model MoneyMe.Web.Models.Scaffolding.User

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    AspNetUser
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.AspNetUserId, ((IEnumerable<MoneyMe.Web.Models.Scaffolding.AspNetUser>)ViewBag.PossibleAspNetUsers).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.AspNetUserId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.AspNetUserId)
</div>
<div class="editor-label">
    Position
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.PositionId, ((IEnumerable<MoneyMe.Web.Models.Scaffolding.Position>)ViewBag.PossiblePositions).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.PositionId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.PositionId)
</div>
