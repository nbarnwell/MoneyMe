@model IEnumerable<MoneyMe.Web.Models.Scaffolding.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Username
        </th>
        <th>
            Accounts
        </th>
        <th>
            Family
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Username
        </td>
        <td>
			@(item.Accounts == null ? "None" : item.Accounts.Count.ToString())
        </td>
        <td>
			@(item.Family == null ? "None" : item.Family.Name)
        </td>
    </tr>
}

</table>


