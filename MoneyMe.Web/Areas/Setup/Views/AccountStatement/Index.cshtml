@model IEnumerable<MoneyMe.Web.Models.Scaffolding.AccountStatement>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            PeriodStart
        </th>
        <th>
            PeriodEnd
        </th>
        <th>
            StartingBalance
        </th>
        <th>
            AccountTransactions
        </th>
        <th>
            Account
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.PeriodStart
        </td>
        <td>
			@item.PeriodEnd
        </td>
        <td>
			@String.Format("{0:F}", item.StartingBalance)
        </td>
        <td>
			@(item.AccountTransactions == null ? "None" : item.AccountTransactions.Count.ToString())
        </td>
        <td>
			@(item.Account == null ? "None" : item.Account.Name)
        </td>
    </tr>
}

</table>


