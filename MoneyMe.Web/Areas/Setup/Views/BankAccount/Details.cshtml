@model MoneyMe.Web.Models.Scaffolding.BankAccount

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>BankAccount</legend>

    <div class="display-label">CreditLimit</div>
    <div class="display-field">@String.Format("{0:F}", Model.CreditLimit)</div>

    <div class="display-label">BankName</div>
    <div class="display-field">@Model.BankName</div>

    <div class="display-label">AccountNumber</div>
    <div class="display-field">@Model.AccountNumber</div>

    <div class="display-label">SortCode</div>
    <div class="display-field">@Model.SortCode</div>

    <div class="display-label">Account</div>
    <div class="display-field">@(Model.Account == null ? "None" : Model.Account.Name)</div>

    <div class="display-label">Bank</div>
    <div class="display-field">@(Model.Bank == null ? "None" : Model.Bank.Name)</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


