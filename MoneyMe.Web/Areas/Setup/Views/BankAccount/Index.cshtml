@model IEnumerable<MoneyMe.Web.Models.Scaffolding.BankAccount>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            CreditLimit
        </th>
        <th>
            BankName
        </th>
        <th>
            AccountNumber
        </th>
        <th>
            SortCode
        </th>
        <th>
            Account
        </th>
        <th>
            Bank
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@String.Format("{0:F}", item.CreditLimit)
        </td>
        <td>
			@item.BankName
        </td>
        <td>
			@item.AccountNumber
        </td>
        <td>
			@item.SortCode
        </td>
        <td>
			@(item.Account == null ? "None" : item.Account.Name)
        </td>
        <td>
			@(item.Bank == null ? "None" : item.Bank.Name)
        </td>
    </tr>
}

</table>


