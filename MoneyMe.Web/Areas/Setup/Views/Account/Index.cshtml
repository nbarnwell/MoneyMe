@model IEnumerable<MoneyMe.Web.Models.Scaffolding.Account>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            CreditLimit
        </th>
        <th>
            AccountStatements
        </th>
        <th>
            BankAccounts
        </th>
        <th>
            Budgets
        </th>
        <th>
            Funds
        </th>
        <th>
            Position
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@String.Format("{0:F}", item.CreditLimit)
        </td>
        <td>
			@(item.AccountStatements == null ? "None" : item.AccountStatements.Count.ToString())
        </td>
        <td>
			@(item.BankAccounts == null ? "None" : item.BankAccounts.Count.ToString())
        </td>
        <td>
			@(item.Budgets == null ? "None" : item.Budgets.Count.ToString())
        </td>
        <td>
			@(item.Funds == null ? "None" : item.Funds.Count.ToString())
        </td>
        <td>
			@(item.Position == null ? "None" : item.Position.Name)
        </td>
    </tr>
}

</table>


