@model MoneyMe.Web.Models.Scaffolding.Account

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Account</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">CreditLimit</div>
    <div class="display-field">@String.Format("{0:F}", Model.CreditLimit)</div>

    <div class="display-label">AccountStatements</div>
    <div class="display-field">@(Model.AccountStatements == null ? "None" : Model.AccountStatements.Count.ToString())</div>

    <div class="display-label">BankAccounts</div>
    <div class="display-field">@(Model.BankAccounts == null ? "None" : Model.BankAccounts.Count.ToString())</div>

    <div class="display-label">Budgets</div>
    <div class="display-field">@(Model.Budgets == null ? "None" : Model.Budgets.Count.ToString())</div>

    <div class="display-label">Funds</div>
    <div class="display-field">@(Model.Funds == null ? "None" : Model.Funds.Count.ToString())</div>

    <div class="display-label">Position</div>
    <div class="display-field">@(Model.Position == null ? "None" : Model.Position.Name)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


