@model MoneyMe.Web.Models.Scaffolding.AccountTransactionType

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>AccountTransactionType</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">IsIncome</div>
    <div class="display-field">@Model.IsIncome</div>

    <div class="display-label">AccountTransactions</div>
    <div class="display-field">@(Model.AccountTransactions == null ? "None" : Model.AccountTransactions.Count.ToString())</div>

    <div class="display-label">BankSpecificTransactionTypes</div>
    <div class="display-field">@(Model.BankSpecificTransactionTypes == null ? "None" : Model.BankSpecificTransactionTypes.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


