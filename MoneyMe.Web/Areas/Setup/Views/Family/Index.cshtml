@model IEnumerable<MoneyMe.Web.Models.Scaffolding.Family>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            AccountTransactionCategories
        </th>
        <th>
            Users
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@(item.AccountTransactionCategories == null ? "None" : item.AccountTransactionCategories.Count.ToString())
        </td>
        <td>
			@(item.Users == null ? "None" : item.Users.Count.ToString())
        </td>
    </tr>
}

</table>


