@model IEnumerable<MoneyMe.Web.Models.Scaffolding.AggregateRoot>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Version
        </th>
        <th>
            AggregateRootEvents
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Version
        </td>
        <td>
			@(item.AggregateRootEvents == null ? "None" : item.AggregateRootEvents.Count.ToString())
        </td>
    </tr>
}

</table>


