@model IEnumerable<MoneyMe.Web.Models.Scaffolding.BankSpecificTransactionType>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            AccountTransactionType
        </th>
        <th>
            Bank
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Description
        </td>
        <td>
			@(item.AccountTransactionType == null ? "None" : item.AccountTransactionType.Name)
        </td>
        <td>
			@(item.Bank == null ? "None" : item.Bank.Name)
        </td>
    </tr>
}

</table>


